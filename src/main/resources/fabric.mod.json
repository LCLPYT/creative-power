{
  "schemaVersion": 1,
  "id": "crepow",
  "version": "${version}",

  "name": "Creative Power",
  "description": "Fabric Client mod for boosting a builders efficiency.",
  "authors": [
    "LCLP"
  ],
  "contact": {
    "homepage": "https://github.com/LCLPYT/creative-power",
    "sources": "https://github.com/LCLPYT/creative-power"
  },

  "license": "MIT",
  "icon": "assets/crepow/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "work.lclpnet.creative.CreativePower"
    ],
    "client": [
      "work.lclpnet.creative.client.CreativePowerClient"
    ],
    "modmenu": [
      "work.lclpnet.creative.CreativePowerModMenu"
    ]
  },
  "mixins": [
    "crepow.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "~1.20",
    "java": ">=17",
